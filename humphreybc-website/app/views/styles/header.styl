@import 'nib'

orange = #ce6c36
green = #8dc63f

header
	height 45px
	background linear-gradient(top, green, darken(green, 5))
	box-shadow 0px 2px 3px #ddd
	border-bottom 1px solid darken(green, 10)
	position fixed
	width 100%
	top 0px

	h1
		color #fff
		margin 0px
		padding 4px 0px 0px 20px
		font-size 26px
		text-shadow 0px -1px 0px darken(green, 15)
		font-weight bold
		font-family 'Pacifico', sans-serif