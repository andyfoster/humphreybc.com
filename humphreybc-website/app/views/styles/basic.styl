@import 'nib'

orange = #ce6c36
green = #8dc63f

body
	background-color #f7f6f5
	font-family 'Lato', sans-serif
	font-size 13px
	color #333
	margin 60px 0px 0px
	padding 0px
	-webkit-font-smoothing antialised

.container
	margin 40px auto
	padding 20px
	width 100%

.message-container
	margin 10px auto
	padding-bottom 10px
	width 550px
	overflow hidden

#new-message
	float left
	margin-right 20px

#new-message-submit
	float left

.user-name
	margin 10px 0px -5px 20px
	float left
	font-size 11px

	a
		margin 0px
		padding 0px
		text-decoration none
		color #888

		&:hover
			color orange
			cursor pointer
	
	p
		color #bbb
		margin 0px
		padding 0px

.message
	float left
	padding 5px 20px 5px
	background-color #fff
	width 400px	
	border 1px solid #ddd
	box-shadow 0px 1px 2px #ddd

	p
		font-size 15px