@import 'nib'

orange = #ce6c36
green = #8dc63f

textarea, input[type='text'], input[type='password']
	width 400px
	padding 10px
	border 1px solid #bbb
	box-shadow inset 0px 2px 5px #eee, 0px 1px 0px #fff
	font-family 'Lato', sans-serif
	font-size 15px
	border-radius 4px

	&:hover
		border 1px solid #999

	&:focus
		border 1px solid green
		outline none

.green-button
	cursor pointer
	color #fff
	text-shadow 0px -1px 0px darken(green, 10)
	padding 11px
	border-radius 4px
	box-shadow inset 0px 1px 0px lighten(green, 20), 0px 2px 3px #ddd
	border 1px solid darken(green, 10)
	background linear-gradient(top, green, darken(green, 5))

	&:hover
		cursor pointer
		background linear-gradient(top, lighten(green, 5), darken(green, 5))

	&:active
		box-shadow inset 0px 1px 3px darken(green, 10)

::-webkit-input-placeholder
	color #bbb
	font-weight normal

:-moz-placeholder
	color #bbb